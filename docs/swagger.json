{
  "swagger": "2.0",
  "info": {
    "title": "contact_app API",
    "description": "API documentation for contact CRUD operations of Contact App",
    "version": "1.0.0"
  },
  "host": "localhost:3000",
  "basePath": "",
  "schemes": ["http", "https"],
  "paths": {
    
    "/api/contact/Create": {
      "post": {
        "summary": "Create a contact",
        "description": "Create a new contact",
        "tags": ["Contacts"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "schema": {
              "$ref": "#/definitions/Contact"
            },
            "required": true,
            "description": "Contact object"
          }
        ],
        "responses": {
          "201": {
            "description": "Contact created"
          }
        }
      }
    },
    "/api/contact/list": {
      "get": {
        "summary": "All Contacts",
        "description": "display list of all contacts available",
        "tags": ["Contacts"],
        "responses": {
          "201": {
            "description": "Contact created"
          }
        }
      }
    },
    "/api/contact/{id}": {
      "put": {
        "summary": "Update a contact by ID",
        "description": "Update a contact by ID",
        "tags": ["Contacts"],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "schema": {
              "$ref": "#/definitions/Contact"
            },
            "required": true,
            "description": "Contact object"
          },
          {
            "in": "body",
            "name": "body",
            "schema": {
              "$ref": "#/definitions/Contact"
            },
            "required": true,
            "description": "Updated contact object"
          }
        ],
        "responses": {
          "200": {
            "description": "Contact updated"
          },
          "404": {
            "description": "Contact not found"
          }
        }
      },
      "delete": {
        "summary": "Delete a contact by ID",
        "description": "Delete a contact by ID",
        "tags": ["Contacts"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "schema": {
              "$ref": "#/definitions/Contact"
            },
            "description": "ID of the contact to delete",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "204": {
            "description": "Contact deleted"
          },
          "404": {
            "description": "Contact not found"
          }
        }
      },
      "get": {
        "summary": "Get a contact by ID",
        "description": "Get a contact by ID",
        "tags": ["Contacts"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "schema": {
              "$ref": "#/definitions/Contact"
            },
            "description": "ID of the contact to retrieve",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response"
          },
          "404": {
            "description": "Contact not found"
          }
        }
      }
    }
  },
  "definitions": {
    "Contact": {
      "type": "object",
      "properties": {
        "firstName":{
          "type": "String"
        },
        "lastName":{
          "type": "String",
          "default":"alice"
        },
        "email":{
          "type": "String",
          "default":"@gmail.com"
        },
        "phone": {
          "type": "String",
          "default":"+250"
        },
        "workPhone": {
          "type": "String",
          "default":"078"
        },
        "address": {
          "type": "String",
          "default":"Country:"
        },
        "company": {
          "type": "String"
        },
        "profilePicture": {
          "type": "String"
        }
      },
      "required": ["firstName", "lastName","phone","email","workPhone"]
    }
  }
}